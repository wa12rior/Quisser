{% extends 'templates/app.twig' %}

{% block content %}
<form method="post" action="{{ path_for('auth.signup') }}" autocomplete="off">
    <div class="container_">
    <div class="box">
        <div class="box__header">
        Quisser
        </div>
        <div class="box__content">
        <div class="input_">
            <svg class="lnr lnr-inbox"><use xlink:href="#lnr-inbox"></use></svg>
            <input class="form__input{{ errors.email ? ' form__input--alert' : '' }}" type="email" name="email" id="email" placeholder="Podaj email" value="{{ old.email }}">
            {% if errors.email %}
            <p class="help is-danger">{{ errors.email | first }}</p>
            {% endif %}
        </div>
        <div class="input_">
            <svg class="lnr lnr-user"><use xlink:href="#lnr-user"></use></svg>
            <input class="form__input{{ errors.name ? ' form__input--alert' : '' }}" type="text" name="name" id="name" value="{{ old.name }}" placeholder="Podaj imię">
            {% if errors.name %}
            <p class="help is-danger">{{ errors.name | first }}</p>
            {% endif %}
        </div>
        <div class="input_">
            <svg class="lnr lnr-user"><use xlink:href="#lnr-lock"></use></svg>
            <input class="form__input{{ errors.password ? ' form__input--alert' : '' }}" type="password" name="password" id="password" placeholder="Podaj hasło">
            {% if errors.password %}
            <p class="help is-danger">{{ errors.password | first }}</p>
            {% endif %}
        </div>
        </div>
        <div class="box__footer">
        <a class="btn" href="{{ path_for('auth.signin') }}">Zaloguj</a>
        {{
                csrf.field | raw
        }}
        <button class="btn btn--gradient" type="submit">Rejestracja</button>
        </div>
    </div>
    </div>
</form>
               
{% endblock %}